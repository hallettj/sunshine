{
  "name": "sunshine-framework",
  "version": "2.0.0-pre",
  "description": "Framework for client-side apps, based on Flux and functional reactive programming",
  "license": "Apache-2.0",
  "homepage": "https://github.com/hallettj/sunshine",
  "repository": {
    "type": "git",
    "url": "https://github.com/hallettj/sunshine.git"
  },
  "main": "sunshine.js",
  "scripts": {
    "test": "node_modules/.bin/babel-node node_modules/.bin/_mocha --full-trace --recursive -R spec -C --check-leaks test/",
    "typecheck": "node_modules/.bin/flow check",
    "prepublish": "npm run typecheck && make && npm test"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "files": [
    "sunshine.js",
    "sunshine.js.flow",
    "sunshine.js.map",
    "react.js",
    "react.js.flow",
    "react.js.map"
  ],
  "directories": {
    "example": "examples"
  },
  "dependencies": {
    "flatmap": ">=0.0.3",
    "kefir": "~3.2",
    "react": ">=0.14.0",
    "safety-lens": ">=1.2.0"
  },
  "devDependencies": {
    "babel-cli": "~6.5",
    "babel-plugin-transform-class-properties": "~6.6.0",
    "babel-preset-es2015": "~6.5",
    "babel-preset-react": "~6.5",
    "chai": "~3",
    "chai-as-promised": "~5",
    "chai-dom": "~1.4.0",
    "flow-bin": "~0.22.0",
    "jsdom": "~8.1.0",
    "mocha": "~2.3.4",
    "react-addons-test-utils": ">=0.14.0",
    "react-dom": ">=0.14.0"
  }
}
